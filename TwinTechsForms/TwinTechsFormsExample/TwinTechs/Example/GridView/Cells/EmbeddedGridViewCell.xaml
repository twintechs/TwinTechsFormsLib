<?xml version="1.0" encoding="UTF-8"?>

<xlabs:FastGridCell
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:xlabs="clr-namespace:XLabs.Forms.Controls;assembly=TwinTechsForms"
	xmlns:cells="clr-namespace:TwinTechs.Example.GridView.Cells;assembly=TwinTechsFormsExample"
	x:Class="TwinTechs.Example.GridView.Cells.EmbeddedGridViewCell">

		<xlabs:GridView
			x:Name="ItemsGrid"
			RowSpacing="5"
			ColumnSpacing="5"
			ContentPaddingLeft="10"
			ContentPaddingRight="0"
			ContentPaddingBottom="0"
			ContentPaddingTop="0"
			IsContentCentered="false"
			ItemWidth="140"
			ItemHeight="100"
			ItemSelected="OnItemSelected"
			SelectionEnabled="true"
			BackgroundColor="#414141"
			IsHorizontal="true">

			<xlabs:GridView.ItemTemplate>

				<DataTemplate>

					<cells:InnerGridViewThumbnailCell />

				</DataTemplate>

			</xlabs:GridView.ItemTemplate>

		</xlabs:GridView>
</xlabs:FastGridCell>
